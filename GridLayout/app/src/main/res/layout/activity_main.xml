<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.parth.phrases.MainActivity">
<Button
    android:layout_column="0"
    android:layout_row="0"
    android:layout_gravity="fill"
    android:id="@+id/hello"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    android:text="Hello"
    android:onClick="tapped"/>
    <Button
        android:layout_column="1"
        android:layout_row="0"
        android:layout_gravity="fill"
        android:id="@+id/doyouspeakenglish"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="Do You&#10;Speak English?"
        android:onClick="tapped"/>
    <Button
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="fill"
        android:id="@+id/goodevening"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="Good Evening"
        android:onClick="tapped"/>
    <Button
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="fill"
        android:id="@+id/howareyou"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="How are you?"
        android:onClick="tapped"/>
    <Button
        android:layout_column="1"
        android:layout_row="1"
        android:layout_gravity="fill"
        android:id="@+id/welcome"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="Welcome"
        android:onClick="tapped"/>
    <Button
        android:layout_column="1"
        android:layout_row="2"
        android:layout_gravity="fill"
        android:id="@+id/mynameis"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="My name is..."
        android:onClick="tapped"
        />
    <Button
        android:layout_column="0"
        android:layout_row="3"
        android:layout_gravity="fill"
        android:id="@+id/ilivein"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="I live in..."
        android:onClick="tapped"
        />
    <Button
        android:layout_column="1"
        android:layout_row="3"
        android:layout_gravity="fill"
        android:id="@+id/please"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="Please"
        android:onClick="tapped"
        />
</GridLayout>
